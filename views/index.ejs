  </div>
</main>
  <!-- Footer -->
  <footer class="page-footer orange">
    <div class="container" id="footer-filler">

    </div>
    <div class="footer-copyright">
      <div class="container center">
        <a class="orange-text text-lighten-3" href="https://github.com/Teachers-Pet">Github</a>
      </div>
    </div>
  </footer>

  <!-- Modal for Logging in -->
  <div id="modal-login" class="modal modal-fixed-footer">
    <div class="modal-content center">
      <h4>Log In</h4>
      <!-- FORM INPUT -->
      <form id="signin" name="signin" method="post" action="/signin">
        <!--EMAIL-->
        <div class="row">
          <div class="input-field col s10 offset-s1">
            <input name="email" type="email" class="validate"></input>
            <label for="email">Email:</label>
          </div>
        </div>
        <!--PASSWORD-->
        <div class="row">
          <div class="input-field col s10 offset-s1">
            <input name="password" type="password" class="validate">
            <label for="password">Password:</label>
          </div>
        </div>

    </div>
    <div class="modal-footer">
      <!-- FORM SUBMIT BUTTON-->
      <button id="signinbutton" class="btn waves-effect waves-light teal lighten-2" type="submit" value="Sign In">Log In</button>
      </form>
      <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Cancel</a>
    </div>
  </div>

  <!-- Modal for Registering -->
  <div id="register-modal" class="modal modal-fixed-footer">
    <div class="modal-content center">
      <h4>Register</h4>
      <!-- FORM INPUT -->
      <form id="signup" name="signup" method="post" action="/signup">
        <!--Name-->
        <div class="row">
          <div class="input-field col s10 offset-s1">
            <input name="name" type="text" class="validate newuser"></input>
            <label for="name">Name:</label>
          </div>
        </div>
        <!--Email-->
        <div class="row">
          <div class="input-field col s10 offset-s1">
            <input name="email" type="email" class="validate newuser"></input>
            <label for="email">Email:</label>
          </div>
        </div>
        <!--Password-->
        <div class="row">
          <div class="input-field col s10 offset-s1">
            <input name="password" type="password" class="newuser validate">
            <label for="password">Password:</label>
          </div>
        </div>
    </div>
    <div class="modal-footer">
      <button id="signupbutton" class="btn waves-effect waves-light teal lighten-2" type="submit" value="Sign Up">Register</button>
      </form>
      <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Cancel</a>
    </div>
  </div>

</body>
