      </ul>
      <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>
    </div>
  </nav>
</header>
<main> 
  <!-- Jumbotron/Banner -->
  <div class="section no-pad-bot" id="index-banner">
    <div class="container">
      <br>
      <br>
      <div class="row center extra-padding">
        <h5 class="header col s12 light">Manage your class today!</h5>
      </div>
      <div class="row extra-padding center">
        <a class="waves-effect waves-light btn orange lighten-2" type="submit" id="login" href="#modal-login">ENTER TEACHER PORTAL</a>
      </div>
      <br>
      <br>
    </div>
  </div>
  <!-- Marketing Blurbs -->
  <div class="container">
    <div class="section">
      <!--   Icon Section   -->
      <div class="row">
        <div class="col s12 m4">
          <div class="icon-block">
            <!--             <h2 class="center light-blue-text"><i class="material-icons">flash_on</i></h2>
 -->
            <center><img class="icons" src="assets/images/icon1.png"></center>
